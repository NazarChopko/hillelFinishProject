extends layout

block head
    title Admin panel
    link(rel="stylesheet" href="/admin/admin.css")
block body 
    .wrapper 
       if users.length > 0
        each user in users
                .user_container 
                    p= user.id
                    p= user.email
                    if user.role
                       p  - Admin
                    else 
                        button.deleteUser(id=`${user.id}` role='button') Delete 
            
        else 
            p No any users
    script(src='/admin/deleteUser.js' type='module')
    